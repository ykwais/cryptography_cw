<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.TitledPane?>
<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.frontend.controller.MainChatController">
    <top>
        <VBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <padding>
                    <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                </padding>
                <Label text="Secure Chat">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="userLabel" text="User:" />
                <Button fx:id="logoutButton" onAction="#onLogoutClick" text="Exit" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <padding>
                    <Insets bottom="10.0" left="15.0" right="15.0" top="5.0" />
                </padding>
                <TextField fx:id="searchField" promptText="Searching for users..." HBox.hgrow="ALWAYS" />
                <Button fx:id="searchButton" onAction="#onSearchClick" text="Search" />
            </HBox>
        </VBox>
    </top>

    <center>
        <HBox>
            <VBox>
                <Label text="Your chats">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </Label>

                <ListView fx:id="chatListView" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                    </VBox.margin>
                </ListView>
            </VBox>

            <VBox HBox.hgrow="ALWAYS">
                <HBox alignment="CENTER_LEFT" spacing="20">
                    <padding>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                    </padding>

                    <Label fx:id="chatTitleLabel" text="Select chat" HBox.hgrow="NEVER">
                        <font>
                            <Font name="System Bold" size="16.0" />
                        </font>
                        <HBox.margin>
                            <Insets right="10.0" />
                        </HBox.margin>
                    </Label>

                    <Region HBox.hgrow="ALWAYS" />

                    <TitledPane fx:id="chatDetailsPane" text="Room Settings" expanded="false" HBox.hgrow="NEVER">
                        <VBox spacing="5.0">
                            <padding>
                                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                            </padding>
                            <Label fx:id="cipherLabel" text="Cipher:"/>
                            <Label fx:id="keyLengthLabel" text="Key length bit:"/>
                            <Label fx:id="modeLabel" text="Mode:"/>
                            <Label fx:id="paddingLabel" text="Padding:"/>
                            <Label fx:id="ivLabel" text="IV" wrapText="true" />
                            <Button text="Edit Settings" onAction="#onEditSettingsClick"/>
                        </VBox>
                        <HBox.margin>
                            <Insets left="10.0" right="10.0" />
                        </HBox.margin>
                    </TitledPane>

                    <Region HBox.hgrow="ALWAYS" />

                    <Button fx:id="leaveChatButton" text="Leave Chat" onAction="#onLeaveChatClick">
                        <HBox.margin>
                            <Insets left="10.0" right="10.0" />
                        </HBox.margin>
                    </Button>
                    <Button fx:id="inviteUserButton" text="Invite User" onAction="#onInviteUserClick" visible="false"/>
                </HBox>



                <ScrollPane fx:id="messagesScrollPane" fitToWidth="true" VBox.vgrow="ALWAYS">
                    <VBox fx:id="messagesContainer" spacing="5.0">
                        <padding>
                            <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                        </padding>
                    </VBox>
                </ScrollPane>

                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="10.0" />
                    </padding>
                    <TextField fx:id="messageInputField" disable="true" onAction="#onSendMessage" promptText="Enter message..." HBox.hgrow="ALWAYS" />
                    <Button fx:id="sendButton" disable="true" onAction="#onSendMessage" text="Send" />
               <Button disable="true" fx:id="sendFileButton" text="File" onAction="#chooseFile" />
                </HBox>
            </VBox>

            <VBox fx:id="searchResultsPanel" visible="false">
                <Label text="Search results">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </Label>

                <ListView fx:id="searchResultsListView" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                    </VBox.margin>
                </ListView>

                <Button fx:id="closeSearchButton" onAction="#onCloseSearchClick" text="Close search">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                    </VBox.margin>
                </Button>
            </VBox>
        </HBox>
    </center>
</BorderPane>
