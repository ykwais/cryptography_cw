<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="676.0" prefWidth="527.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.frontend.controller.LoginController">
  <VBox alignment="CENTER" prefHeight="429.0" prefWidth="527.0" spacing="20.0" styleClass="login-container">
    <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
    <Label styleClass="login-title" text="Secure Chat">
      <font>
        <Font name="System Bold" size="24.0" />
      </font>
    </Label>
    <Label styleClass="login-subtitle" text="Login to your account">
      <font>
        <Font size="14.0" />
      </font>
    </Label>

    <VBox spacing="15.0" styleClass="form-container">
      <padding>
        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
      </padding>
      <VBox spacing="5.0">
        <Label text="Username:" />
        <TextField fx:id="usernameField" promptText="Enter username" styleClass="input-field" />
      </VBox>

      <VBox spacing="5.0">
        <Label text="Password:" />
        <PasswordField fx:id="passwordField" promptText="Enter password" styleClass="input-field" />
      </VBox>

      <Label fx:id="errorLabel" styleClass="error-label" text="" visible="false" />
      <HBox alignment="CENTER">
        <Button fx:id="loginButton" onAction="#onLoginButtonClick" styleClass="primary-button" text="Login" />
      </HBox>

      <HBox alignment="CENTER" spacing="5.0">
        <Label text="Don't have an account?" />
        <Hyperlink onAction="#onRegisterLinkClick" text="Register" />
      </HBox>
    </VBox>
  </VBox>
  <VBox alignment="CENTER">
    <ImageView fitHeight="228.0" fitWidth="303.0" pickOnBounds="true" preserveRatio="true">
<!--    <Image url="/images/logo.png"/>   -->
    </ImageView>
  </VBox>
</VBox>
