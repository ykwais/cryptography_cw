<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.frontend.controller.FileTransferProgressController"
      spacing="10" alignment="CENTER"
      style="-fx-padding: 20; -fx-background-color: #f0f0f0;">

    <Label fx:id="statusLabel" text="Sending file..." style="-fx-font-weight: bold;"/>
    <ProgressBar fx:id="progressBar" prefWidth="300" progress="0"/>
</VBox>